[Unit]
Description=run gunicorn
ConditionPathExists=|{{ app_path }}

[Service]
WorkingDirectory={{ benchmark_path }}
ExecStart={{ env_path }}/gunicorn -c {{ local_path }}/.config/{{ gunicorn_config_file }} --debug --bind unix:{{ socket_file }} run:app
SyslogIdentifier={{ app_service_name }}

[Install]
WantedBy=multi-user.target
